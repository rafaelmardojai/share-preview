<?xml version="1.0" encoding="UTF-8"?>
<!-- Rafael Mardojai CM 2021 <email@rafaelmardojai.com> -->
<component type="desktop-application">
  <id>@app-id@</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>Share Preview</name>
  <summary>Test social media cards locally</summary>
  <description>
    <p>Preview and debug websites metadata tags for social media share.</p>
  </description>
  <screenshots>
    <screenshot type="default">
      <image>https://github.com/rafaelmardojai/share-preview/raw/master/brand/screenshot-1.png</image>
    </screenshot>
    <screenshot>
      <image>https://github.com/rafaelmardojai/share-preview/raw/master/brand/screenshot-2.png</image>
    </screenshot>
    <screenshot>
      <image>https://github.com/rafaelmardojai/share-preview/raw/master/brand/screenshot-3.png</image>
    </screenshot>
  </screenshots>
  <url type="homepage">https://apps.gnome.org/SharePreview/</url>
  <url type="bugtracker">https://github.com/rafaelmardojai/share-preview/issues</url>
  <url type="donation">https://mardojai.com/donate/</url>
  <url type="translate">https://hosted.weblate.org/engage/share-preview/</url>
  <url type="vcs-browser">https://github.com/rafaelmardojai/share-preview/</url>
  <content_rating type="oars-1.1" />
  <branding>
    <color type="primary" scheme_preference="light">#c582c7</color>
    <color type="primary" scheme_preference="dark">#603761</color>
  </branding>
  <releases>
    <release version="0.5.0" date="2024-04-02">
      <description translate="no">
        <ul>
          <li>Support data URLs sceheme in favicons</li>
          <li>Add action to focus URL entry (Ctrl+L)</li>
          <li>Meta images with relative urls will fail for Twitter previews</li>
          <li>Minor UI updates for GNOME 46</li>
          <li>Mastodon preview updated</li>
        </ul>
      </description>
    </release>
    <release version="0.4.0" date="2023-09-29">
      <description translate="no">
        <ul>
          <li>Allow opening multiple instances of the app</li>
          <li>Support for Discourse previews</li>
          <li>Support for LinkedIn previews</li>
          <li>Internal code improvements</li>
        </ul>
      </description>
    </release>
    <release version="0.3.0" date="2023-03-23">
      <description translate="no">
        <ul>
          <li>New scraping logger feature</li>
          <li>Save last selected social platform</li>
          <li>Design improvements</li>
          <li>Updated to use latest libadwaita features</li>
          <li>Many small bug fixes</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="0.2.0" date="2022-03-27">
      <description translate="no">
        <ul>
          <li>New page data dialog</li>
          <li>Bug fixes</li>
          <li>Code cleanup and improvements</li>
          <li>Added new translations</li>
        </ul>
      </description>
    </release>
    <release version="0.1.2" date="2021-05-25">
      <description translate="no">
        <ul>
          <li>Bug fixes</li>
          <li>Added Turkish translation</li>
          <li>Added Dutch translation</li>
          <li>Added Italian translation</li>
        </ul>
      </description>
    </release>
    <release version="0.1.1" date="2021-05-23">
      <description translate="no">
        <p>Bug fixes and improvements.</p>
      </description>
    </release>
    <release version="0.1.0" date="2021-05-21">
      <description translate="no">
        <p>First public release.</p>
      </description>
    </release>
  </releases>
  <kudos>
     <!--
       GNOME Software kudos:
       https://gitlab.gnome.org/GNOME/gnome-software/blob/master/doc/kudos.md
     -->
     <kudo>ModernToolkit</kudo>
     <kudo>HiDpiIcon</kudo>
  </kudos>
  <requires>
    <display_length compare="ge">524</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>
  <!-- developer_name tag deprecated with Appstream 1.0 -->
  <developer_name translate="no">Rafael Mardojai CM</developer_name>
  <developer id="com.mardojai">
    <name translate="no">Rafael Mardojai CM</name>
  </developer>
  <update_contact>email@rafaelmardojai.com</update_contact>
  <translation type="gettext">@gettext-package@</translation>
  <launchable type="desktop-id">@app-id@.desktop</launchable>
</component>
